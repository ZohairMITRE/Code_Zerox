<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".More_services"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/interogation" />

    <TextView
        android:id="@+id/anyquestion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Any things to explain? We are here for you  !!"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edittxt_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_subj"
        android:ems="10"
        android:hint="   Subject of your Question !!"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edittxt_core"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:drawableLeft="@drawable/ic_message"
        android:ems="10"
        android:hint="   write your message or your question !!"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/send"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/black"
        android:text="Send Email" />
    <TextView
        android:id="@+id/ifyouwant_maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Our localisation here"
        android:textAlignment="center"
        android:textSize="20sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/Maps"
        android:layout_width="308dp"
        android:layout_height="139dp"
        android:layout_gravity="center"
        android:background="@color/black"
        android:drawableLeft="@drawable/mymaps" />


</LinearLayout>